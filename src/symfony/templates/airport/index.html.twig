{% extends "base.html.twig" %}

{% block title %}Liste des aéroports{% endblock %}

{% block body %}
<h1>Liste des aéroports</h1>
<br>
{% for letter in 'A'..'Z' %} 
<a href="{{ path('airport_list_alpha', { 'letter': letter }) }}">{{ letter }}</a>
{% endfor %}
<table class="table">
    <tr>
        <th>Id
            <a href="{{ path('airport_index', { 'page': 1, 'col': 'id', 'sens': 'desc' }) }}">&uarr;</a>
            <a href="{{ path('airport_index', { 'page': 1, 'col': 'id', 'sens': 'asc' }) }}">&darr;</a>
        </th>
        <th>Identité
            <a href="{{ path('airport_index', { 'page': 1, 'col': 'ident', 'sens': 'desc' }) }}">&uarr;</a>
            <a href="{{ path('airport_index', { 'page': 1, 'col': 'ident', 'sens': 'asc' }) }}">&darr;</a>
        </th>
        <th>Nom</th>
        <th>Pays</th>
        <th>Code IATA</th>
        <th>Actions</th>
    </tr>
    {% for airport in airports %}
        <tr>
            <td>{{ airport.id }}</td>
            <td>{{ airport.ident }}</td>
            <td>{{ airport.name }}</td>
            <td>{{ airport.isoCountry }}</td>
            <td>{{ airport.iataCode }}</td>
            <td>
                <a class="btn btn-info" href="{{ path('airport_view', { 'id': airport.id }) }}">Show</a>
                <a class="btn btn-success" href="{{ path('airport_edit', { 'id': airport.id }) }}">Edit</a>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="5">Aucun aéroport</td>
        </tr>
    {% endfor %}

</table>
{% if page > 1 %}
    <a href="{{ path('airport_index', { 'page': page - 1, 'col': col, 'sens': sens }) }}">Page précédente</a>
{% endif %}
Page {{ page }}
{% if page * 20 < airportsNumber %}
<a href="{{ path('airport_index', { 'page': page + 1, 'col': col, 'sens': sens }) }}">Page suivante</a>
{% endif %}
<br></br>
<a class="btn btn-primary" href="{{ path('airport_add') }}">create new</a>

{% endblock %}
