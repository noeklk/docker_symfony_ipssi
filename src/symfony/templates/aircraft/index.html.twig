{% extends "base.html.twig" %}

{% block title %}Liste des avions{% endblock %}

{% block body %}
<h1>Liste des avions</h1>
<a href="{{ path('aircraft_add') }}">Ajouter</a>
<br>
<table>
    <tr>
        <th>Id</th>
        <th>Constructeur</th>
        <th>Modèle</th>
        <th>Vol Effectués</th>
        <th>Actions</th>
    </tr>
    {% for aircraft in aircrafts %}
        <tr>
            <td>{{ aircraft.id }}</td>
            <td>{{ aircraft.manufacturer }}</td>
            <td>{{ aircraft.basicType }}</td>
            <td> 
                <a href="{{ path('flight_aircraft_view', { 'id': aircraft.id }) }}">Voir les vols</a>
            </td>
            <td> 
            <span>
                <a href="{{ path('aircraft_edit', { 'id': aircraft.id }) }}">
                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-wrench" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M.102 2.223A3.004 3.004 0 0 0 3.78 5.897l6.341 6.252A3.003 3.003 0 0 0 13 16a3 3 0 1 0-.851-5.878L5.897 3.781A3.004 3.004 0 0 0 2.223.1l2.141 2.142L4 4l-1.757.364L.102 2.223zm13.37 9.019L13 11l-.471.242-.529.026-.287.445-.445.287-.026.529L11 13l.242.471.026.529.445.287.287.445.529.026L13 15l.471-.242.529-.026.287-.445.445-.287.026-.529L15 13l-.242-.471-.026-.529-.445-.287-.287-.445-.529-.026z"/>
                    </svg>
                </a>
                -
                <a href="{{ path('aircraft_delete', { 'id': aircraft.id }) }}" onclick="return confirm('Êtes vous sûr de vouloir supprimer cet avion ?')">
                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-trash-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5a.5.5 0 0 0-1 0v7a.5.5 0 0 0 1 0v-7z"/>
                    </svg>
                </a>
            </span>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="5">Aucun avion</td>
        </tr>
    {% endfor %}

</table>
{% endblock %}
